<script type='text/javascript'>
$j().ready(function() {
	$j('#email_friend').jqm({ajax:'@href', trigger:'a.email_trigger'});
	$j('#share_more').jqm({trigger:'a.more_trigger'});
});
</script>
<h4 class="share_title"><%= message %></h4>
<ul class="share_icons">
	
	<li class="reddit">
		<a href="http://reddit.com/submit?url=<%=u url %>&title=<%= title %>">Reddit</a>
	</li>
	<li class="digg">
		<a href="http://digg.com/submit?phase=2&amp;url=<%=u url %>&title=<%= title %>">Digg</a>
	</li>  
	<li class="stumble">
		<a href="http://www.stumbleupon.com/submit?url=<%=u url %>&title=<%= title %>">Stumbleupon</a>
	</li>  
	<li class="facebook">
		<a href="http://www.facebook.com/share.php?u=<%= url %>&title=<%= title %>">Facebook</a>
	</li>  
	<li class="mixx">
		<a href="http://www.mixx.com/submit?page_url=<%= url %>&title=<%= title %>">Mixx</a>
	</li>  
	<li class="twitter">
		<a href="http://twitter.com/home?status=<%= "#{title}: #{url}" %>">Twitter</a>
	</li>  


</ul>  
		<a href="#" class="more_trigger more">More</a>

<div id="share_more" class="jqmWindow closer">
	
<h3>Share</h3>	
	
<div class="ie"><a href="#" class="jqmClose"><span>Close</span></a></div>
 <ul class="more_share">
	<li>
		<a href="http://del.icio.us/post?url=<%=u url %>&amp;title=<%= title %>">
			<%= image_tag 'share_icons/share-delicious.gif', :alt=>"del.icio.us" %><span>Del.icio.us</span></a>
	</li>
	<li>
		<a href="http://www.newsvine.com/_wine/save?popoff=0&amp;u=<%=u url %>&amp;h=<%= title %>"> 
		  <%= image_tag 'share_icons/share-newsvine.gif', :alt=>"Newsvine" %><span>Newsvine</span></a>
	</li>
	<li>
		<a href="http://co.mments.com/track?url=<%=u url %>">
			<%= image_tag 'share_icons/share-comments.gif', :alt=>"co.mments" %><span>Co.mments</span></a>
	</li>
	</ul>
</div>


