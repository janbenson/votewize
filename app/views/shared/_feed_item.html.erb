<tr>
  <td class="micropost">
    <span class="user">
      <%= link_to @feed_items.id %>
    </span>
    <span class="content"><%= wrap(feed_item.content) %></span>
    <span class="timestamp">
      Posted <%= (feed_item.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(feed_item.id) %>
    <td>
      <%= link_to "delete", feed_item, :method => :delete,
                                       :confirm => "You sure?",
                                       :title => feed_item.content %>
    </td>
  <% end %>
</tr>