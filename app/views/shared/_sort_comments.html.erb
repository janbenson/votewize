<ul id="sort" class="sort_comments">
<h4>Sort By</h4>
    <li id="oldest" class="<%= (params[:comment_sort] == 'oldest' || params[:comment_sort].blank?) ? "active" : "" %>">
    	<%= link_to "<span>Oldest First</span>".html_safe, :comment_sort => 'oldest' %>
    </li>
		<li id="newest" class="<%= params[:comment_sort] == 'newest' ? "active" : "" %>">
			<%= link_to "<span>Newest First</span>".html_safe, :comment_sort => 'newest' %>
	 	</li>

		<li id="rating" class="<%= params[:comment_sort] == 'rating' ? "active" : "" %>">
			<%= link_to "<span>Highest Rated</span>".html_safe, :comment_sort => 'rating' %>
		</li>
</ul>